{{!
    @template local_coursefisher/buttons

    Add action buttons to the my/courses page

    Example context (json):
    {
        "coursefishertitle": "Course Fisher",
        "addcourseurl": "https://moodle.test/local/coursefisher/addcourse.php",
        "helpurl": "https://moodle.test/help.html"
    }
}}
<div class="btn-group coursefisher-buttons m-1">
    {{#addcourseurl}}
        <a class="btn btn-primary" href="{{addcourseurl}}" title="{{ coursefishertitle }}">{{#str}}addcourse, local_coursefisher{{/str}}</a>
    {{/addcourseurl}}
    {{#helpurl}}
        <a class="btn btn-secondary" href="{{helpurl}}" title="{{ coursefishertitle }}">{{#str}}help, local_coursefisher{{/str}}</a>
    {{/helpurl}}
</div>
